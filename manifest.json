{

  "manifest_version": 2,
  "name": "Chat Now",
  "version": "1.0",

  "description": "Allows Users to chat and share any thing to anywhere in the world easy and fast.",
  "icons": {
    "48": "icons/chatnow-48.png"
  },

  "applications": {
    "gecko": {
      "id": "chatnow@trevorbrown.me",
      "strict_min_version": "45.0"
    }
  }, 

  "permissions": [
    "webNavigation", "webNavigation"
  ], 

  "browser_action": {
    "default_icon": {
     "32" : "icons/chatnow-32.png"
    },
    "default_title": "Chatnow",
    "default_popup": "popup/chatnow.html"
  }
}
